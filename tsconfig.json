{
  "compilerOptions": {
    "target": "es6",
    // Use of ES6
    "module": "amd",
    // Module strategy that is likely to be use with official Polymer/typeScript support. See PolymerLabs/IMD
    "experimentalDecorators": true,
    //
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "lib": [
      "es2017",
      "es6",
      "es5",
      "dom"
    ],
    "types":[],
    "declaration": true,
    /* Generates corresponding '.d.ts' file. */
    "rootDir": "./",
    /* Specify the root directory of input files. Use to control the output directory structure with --outDir. */
    "baseUrl": "./",
    "paths": {
      "ozone-type": [
        "./bower_components/ozone-type/ozone/include"
      ],
      "taktik-polymer-typeScript": [
        "./bower_components/taktik-polymer-typeScript/taktik-polymer-typeScript"
      ],
      "ozone-media-url": [
        "./bower_components/ozone-media-url/src/ozone-media-url"
      ],
      "Clappr" : [
        "./bower_components/clappr/src/main"
      ]
    },
    "outDir": "./build"
  },
  "include": [
    "types",
    "src/*",
    "./node_modules/taktik-polymer-typeScript/type/*",
    "./bower_components/ozone-config/ozone-config.ts",
    "./bower_components/ozone-media-url/src/*"
  ],
  "exclude": [
    "dist",
    "build"
  ]
}